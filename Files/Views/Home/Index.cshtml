@model IEnumerable<Files.Models.File>
@{
    ViewData["Title"] = "Добавление файла";
}
<h3>Выберите файл для загрузки</h3>
<form asp-action="AddFile" asp-controller="Home" method="post" enctype="multipart/form-data">
    <input type="file" name="upploadedFile" /><br>
    <p>Name</p><input type="text" name="Name" /><br>
    <p>Short Description</p><input type="text" name="sD" /><br>
    <p>Long Description</p><input type="text" name="lD" /><br>
    <input type="submit" value="Загрузить" />
</form>

<h3>Все файлы</h3>
@foreach (var f in Model)
{
    @*<p><img src="@Url.Content(f.Path)">@f.Name</p>*@
    <p><a>@f.Path</a></p>

   
}