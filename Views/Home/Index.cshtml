@model IEnumerable<RestaurantApp.Models.Restaurant>
@{
    ViewData["Title"] = "Restaurants";
}
<!DOCTYPE html>

<html>
<head>
   
    <style>
        body {
            /*background-image: url(images/bg.jpg);*/ /* Путь к фоновому изображению */
            background-color: lightcyan; /* Цвет фона */
        }
    </style>
</head>
<body>
    <style>
        h1 {
            color: teal;
        }
    </style>
   
    @{
        foreach (var i in Model)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">

                <div class="thumbnail">
                 
                    <div class="caption">
                        <h3 class="pull-right">@i.RestaurantName</h3>
                     
    
                       
                   </div>
                </div>
            </div>
        }
    }

</body>
</html>